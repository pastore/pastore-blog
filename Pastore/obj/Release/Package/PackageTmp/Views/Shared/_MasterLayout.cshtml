<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=1">
    @{
        string _title = ViewBag.Title ?? "Pastore";
        <title>@(new MvcHtmlString(HttpUtility.HtmlDecode(_title)))</title>
    }
    @RenderSection("MainStyles", false)
    @RenderSection("MainScripts", false)
</head>
<body>
    @RenderSection("SiteHeader", false)
    @RenderBody()
    @RenderSection("SiteFooter", false)

    @RenderSection("ExtraScripts", false)
</body>
</html>
